<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.6Dgrees" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.6Dgrees" parent="Base.Theme.6Dgrees" />

    <style name="HiddenTitleTheme" parent="Theme.6Dgrees">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <!--splash screen theme -->
    <style name="Theme.Onboarding" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/violet_100</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.6Dgrees</item>
    </style>

    <style name="Theme.Onboarding.Icon" parent="Theme.SplashScreen.IconBackground">
        <item name="windowSplashScreenIconBackgroundColor">@color/red_60</item>
    </style>

    <!--Edit Texts-->
    <style name="EditTextStyle" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/input_field</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:paddingStart">@dimen/padding16</item>
        <item name="android:textSize">@dimen/textSize16</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextLayoutInput" parent="@android:style/Widget.TextView">
        <item name="android:layout_marginTop">@dimen/margin24</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--text-->
    <style name="TitleX">
        <item name="fontFamily">@font/inter_bold_700</item>
        <item name="android:textColor">@color/dark_75</item>
        <item name="android:textSize">@dimen/textSize64</item>
    </style>

    <style name="Title1">
        <item name="fontFamily">@font/inter_bold_700</item>
        <item name="android:textColor">@color/dark_75</item>
        <item name="android:textSize">@dimen/textSize32</item>
    </style>

    <style name="Title2">
        <item name="fontFamily">@font/inter_600_semibold</item>
        <item name="android:textColor">@color/dark_75</item>
        <item name="android:textSize">@dimen/textSize24</item>
    </style>

    <style name="Title3">
        <item name="fontFamily">@font/inter_600_semibold</item>
        <item name="android:textColor">@color/dark_75</item>
        <item name="android:textSize">@dimen/textSize18</item>
    </style>

    <style name="Regular1">
        <item name="fontFamily">@font/inter_500_medium</item>
        <item name="android:textColor">@color/dark_75</item>
        <item name="android:textSize">@dimen/textSize16</item>
    </style>

    <style name="Regular2">
        <item name="fontFamily">@font/inter_600_semibold</item>
        <item name="android:textColor">@color/dark_75</item>
        <item name="android:textSize">@dimen/textSize16</item>
    </style>

    <style name="Regular3">
        <item name="fontFamily">@font/inter_500_medium</item>
        <item name="android:textColor">@color/dark_75</item>
        <item name="android:textSize">@dimen/textSize14</item>
    </style>

    <style name="Small">
        <item name="fontFamily">@font/inter_500_medium</item>
        <item name="android:textColor">@color/dark_75</item>
        <item name="android:textSize">@dimen/textSize13</item>
    </style>

    <style name="Tiny">
        <item name="fontFamily">@font/inter_500_medium</item>
        <item name="android:textColor">@color/dark_75</item>
        <item name="android:textSize">@dimen/textSize12</item>
    </style>

    <!--Buttons-->
    <style name="ButtonLarge">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_large_height</item>
        <item name="android:background">@drawable/btn_large_violet</item>
        <item name="android:backgroundTint">@color/violet_100</item>
        <item name="android:fontFamily">@font/inter_600_semibold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/light_80</item>
        <item name="android:textSize">@dimen/textSize18</item>
    </style>

</resources>